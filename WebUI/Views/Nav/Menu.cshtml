@model IEnumerable<string>

@Html.ActionLink("Домой", "List", "Game", null,
    new { @class = "btn btn-primary btn-default btn-lg" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
{
    controller = "Game",
    action = "List",
    category = link,
    page = 1
}, new
{
    @class = "btn btn-primary btn-default btn-lg"
        + (link == ViewBag.Category ? "btn - primary" : "")
})
}
